    'А': [
      {
        name: 'Александр',
        surname: 'Хекслетович',
      },
      {
        name: 'Андрей',
        surname: 'Верстальщиков',
      },
      {
        name: 'Артём',
        surname: 'Джаваскриптов',
      },
    ],
    'Б': [
     {
    name: 'Борис',
    surname: 'Хекслетович',
     },
     {
    name: 'Боров',
    surname: 'Верстальщиков',
     },
